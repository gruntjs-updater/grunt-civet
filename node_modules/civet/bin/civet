#!/usr/bin/env node
var fs = require('fs');
var path = require('path');
var url = require('url');
var civet = require('../index.js');

var fileName = path.join(process.cwd() , process.argv[process.argv.length-1]);
var file = fs.readFileSync(fileName,'utf8');
var vmTPL = civet.juicer2vm(file);
fs.writeFileSync(fileName+'.vm', vmTPL, encoding='utf8');